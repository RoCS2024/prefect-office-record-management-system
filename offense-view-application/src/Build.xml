<project name = "offense-view-application">

    <property name="version" value="1.0"/>
    <property name="author" value="July Bayot"/>
    <property name="dst.dir" value="out"/>
    <property name="src.dir" value=" src/main/java"/>
    <property name="classes.dir" value="build/classes"/>
    <property name="build.dir" value="build"/>
    <property name="doc.dir" value="build/doc"/>
    <property name="jar.dir" value="build/jar"/>
    <property name="main-class" value="Main"/>


    <target name="clean">
        <delete dir ="${build.dir}"/>
    </target>

    <target name="compile">
        <mkdir dir="${classes.dir}"/>
        <javac srcdir="${src.dir}" destdir="${classes.dir}"/>
    </target>

    <target name="jar" depends="compile">
        <mkdir dir="${jar.dir}"/>
        <jar destfile="${jar.dir}/${ant.project.name}.jar" basedir="${classes.dir}">
            <manifest>
                <attribute name="Main-Class" value="${main-class}"/>
            </manifest>
        </jar>
    </target>

    <target name="run" depends="jar">
        <java jar="${jar.dir}/${ant.project.name}.jar" fork="true"/>
    </target>

    <target name="generate-javadoc">
        <javadoc packagenames="com.point.distance.application. *" sourcepath="${src.dir}" destdir="${doc.dir}" version="${version}" windowtitle="Test ANT Documentation">
            <fileset dir="."></fileset>
            <doctitle><![CDATA[= Test Documentation =]]></doctitle>
            <bottom>
            </bottom>
        </javadoc>
        <echo message="java doc has been generated!" />
    </target>


    <target name="clean-build" depends="clean,jar"/>

    <target name="main" depends="clean,run"/>

</project>